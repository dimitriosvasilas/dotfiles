# Easier navigation: .., ..., ~ and -
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

alias g='git'
alias gs='git status'

alias v='nvim'
alias vim='nvim'
alias vi='nvim'

alias c='bat'
alias cat="bat"

alias ls='exa -s name --group-directories-first'
alias la='ls -aH'
alias ll='ls -l'
alias lla='la -l'
alias lld="exa -lD"


alias dotfiles='git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'


